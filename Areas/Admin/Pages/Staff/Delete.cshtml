@page "{id:int}"
@model demo_school_website.Areas.Admin.Pages.Staff.DeleteModel
@{
    ViewData["Title"] = "Delete Staff Member";
}

<div class="container">
    <h1>Delete Staff Member</h1>
    
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this staff member?</h3>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.Staff.ImagePath))
            {
                <img src="@Model.Staff.ImagePath" alt="@Model.Staff.Name" class="img-fluid rounded shadow-sm" />
            }
            else
            {
                <div style="width: 100%; height: 200px; background-color: #e9ecef; display: flex; align-items: center; justify-content: center; border-radius: 5px;">
                    <i class="bi bi-person text-secondary" style="font-size: 4rem;"></i>
                </div>
            }
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">@Model.Staff.Name</h3>
                    <h5 class="card-subtitle mb-3 text-muted">@Model.Staff.Position</h5>
                    
                    <dl class="row">
                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Staff.Email) ? "N/A" : Model.Staff.Email)</dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.Staff.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Added On</dt>
                        <dd class="col-sm-9">@Model.Staff.CreatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                    
                    <h5>Bio</h5>
                    <p>@Model.Staff.Bio</p>
                </div>
            </div>
        </div>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Staff.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>
