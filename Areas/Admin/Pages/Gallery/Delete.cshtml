@page "{id:int}"
@model demo_school_website.Areas.Admin.Pages.Gallery.DeleteModel
@{
    ViewData["Title"] = "Delete Gallery Image";
}

<div class="container">
    <h1>Delete Gallery Image</h1>
    
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this image?</h3>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <img src="@Model.GalleryImage.ImagePath" class="card-img-top" alt="@Model.GalleryImage.Title">
                <div class="card-body">
                    <h5 class="card-title">@Model.GalleryImage.Title</h5>
                    <p class="card-text">@Model.GalleryImage.Description</p>
                    <p class="card-text">
                        <small class="text-muted">Added on @Model.GalleryImage.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </p>
                    <p class="card-text">
                        <span class="badge @(Model.GalleryImage.IsActive ? "bg-success" : "bg-secondary")">
                            @(Model.GalleryImage.IsActive ? "Active" : "Inactive")
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="GalleryImage.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>
