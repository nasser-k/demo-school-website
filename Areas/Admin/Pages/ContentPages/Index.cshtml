@page
@model demo_school_website.Areas.Admin.Pages.ContentPages.IndexModel
@{
    ViewData["Title"] = "Content Pages";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Content Pages</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    @if (Model.ContentPages.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover admin-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Last Updated</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var page in Model.ContentPages)
                    {
                        <tr>
                            <td>@page.Title</td>
                            <td>@page.Slug</td>
                            <td>@page.UpdatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (page.IsPublished)
                                {
                                    <span class="badge bg-success status-badge">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary status-badge">Draft</span>
                                }
                            </td>
                            <td class="action-buttons">
                                <a asp-page="Edit" asp-route-id="@page.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-page="Delete" asp-route-id="@page.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <a href="/@page.Slug" target="_blank" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>No content pages found. Click the "Create New" button to add a page.</p>
        </div>
    }
</div>
