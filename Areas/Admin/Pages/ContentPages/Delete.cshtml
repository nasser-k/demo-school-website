@page "{id:int}"
@model demo_school_website.Areas.Admin.Pages.ContentPages.DeleteModel
@{
    ViewData["Title"] = "Delete Content Page";
}

<div class="container">
    <h1>Delete Content Page</h1>
    
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this page?</h3>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5>Page Details</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.ContentPage.Title</dd>
                
                <dt class="col-sm-3">Slug</dt>
                <dd class="col-sm-9">@Model.ContentPage.Slug</dd>
                
                <dt class="col-sm-3">Created</dt>
                <dd class="col-sm-9">@Model.ContentPage.CreatedAt.ToString("MMM dd, yyyy")</dd>
                
                <dt class="col-sm-3">Last Updated</dt>
                <dd class="col-sm-9">@Model.ContentPage.UpdatedAt.ToString("MMM dd, yyyy")</dd>
                
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.ContentPage.IsPublished)
                    {
                        <span class="badge bg-success">Published</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Draft</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="ContentPage.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>
