@page "{slug}"
@model demo_school_website.Pages.ContentPageModel
@{
    ViewData["Title"] = Model.ContentPage?.Title ?? "Page Not Found";
}

@if (Model.ContentPage != null)
{
    <div class="container mt-4">
        <div class="content-page">
            @Html.Raw(Model.ContentPage.Content)
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="alert alert-warning">
            <h2>Page Not Found</h2>
            <p>The page you requested could not be found.</p>
            <a asp-page="/Index" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
}
